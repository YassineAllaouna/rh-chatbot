<div class="container">
  <!-- Hero Section -->
  <div class="row align-items-center py-5">
    <div class="col-md-6">
      <h1 class="display-4 fw-bold mb-4">Simplifiez l'intégration de vos nouveaux collaborateurs</h1>
      <p class="lead mb-4">Notre plateforme d'onboarding RH vous permet de créer et gérer facilement des parcours d'intégration personnalisés pour vos équipes.</p>
      <div class="d-flex gap-3">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <%= link_to "Gérer les parcours", admin_onboarding_templates_path, class: "btn btn-primary btn-lg" %>
          <% else %>
            <%= link_to "Voir mes parcours", employee_dashboard_path, class: "btn btn-primary btn-lg" %>
          <% end %>
          <%= button_to "Déconnexion", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger btn-lg" %>
        <% else %>
          <%= link_to "Demander un essai gratuit", "#trial-form", class: "btn btn-primary btn-lg" %>
          <%= link_to "Se connecter", new_user_session_path, class: "btn btn-outline-primary btn-lg" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <img src="https://placehold.co/600x400" alt="Onboarding Illustration" class="img-fluid rounded shadow">
    </div>
  </div>

  <!-- Features Section -->
  <div class="row py-5">
    <div class="col-12 text-center mb-5">
      <h2 class="display-5">Fonctionnalités principales</h2>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-tasks fa-3x mb-3 text-primary"></i>
          <h3 class="h4">Parcours personnalisés</h3>
          <p>Créez des parcours d'intégration sur mesure pour chaque type de poste.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-chart-line fa-3x mb-3 text-primary"></i>
          <h3 class="h4">Suivi en temps réel</h3>
          <p>Suivez la progression de vos collaborateurs et identifiez les points de blocage.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-users fa-3x mb-3 text-primary"></i>
          <h3 class="h4">Collaboration simplifiée</h3>
          <p>Facilitez l'intégration de vos nouveaux collaborateurs avec une interface intuitive.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Trial Form Section -->
  <div id="trial-form" class="row py-5 bg-light rounded-3 my-5">
    <div class="col-md-6 mx-auto">
      <div class="text-center mb-4">
        <h2 class="display-5">Essayez gratuitement pendant 14 jours</h2>
        <p class="lead">Aucune carte de crédit requise</p>
      </div>
      
      <%= form_with(url: trial_requests_path, local: true, class: "needs-validation") do |f| %>
        <div class="mb-3">
          <%= f.label :company_name, "Nom de l'entreprise", class: "form-label" %>
          <%= f.text_field :company_name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :full_name, "Nom complet", class: "form-label" %>
          <%= f.text_field :full_name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "Email professionnel", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :phone, "Téléphone", class: "form-label" %>
          <%= f.telephone_field :phone, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :message, "Message (optionnel)", class: "form-label" %>
          <%= f.text_area :message, class: "form-control", rows: 3 %>
        </div>

        <div class="d-grid">
          <%= f.submit "Demander un essai gratuit", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
