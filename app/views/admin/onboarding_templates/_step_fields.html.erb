<div class="nested-fields card mb-3">
  <div class="card-body">
    <div class="row">
      <div class="col-md-8">
        <div class="mb-3">
          <%= f.label :title, "Titre de l'étape", class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :content, "Contenu", class: "form-label" %>
          <%= f.text_area :content, class: "form-control", rows: 3 %>
        </div>
      </div>

      <div class="col-md-4">
        <div class="mb-3">
          <%= f.label :position, "Position", class: "form-label" %>
          <%= f.number_field :position, class: "form-control" %>
        </div>

        <div class="mt-4">
          <%= link_to_remove_association "Supprimer cette étape", f, class: "btn btn-outline-danger btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div> 